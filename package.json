{
  "name": "famatch-web-v3",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "extract:i18n": "formatjs extract '{pages,components,sections,lib}/**/*.{js,ts,tsx}' --format simple --id-interpolation-pattern '[sha512:contenthash:base64:6]' --out-file content/locales/en.json",
    "compile:i18n": "formatjs compile-folder --ast --format simple content/locales content/compiled-locales",
    "i18n": "npm run extract:i18n && npm run compile:i18n"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "./**/*.{js,jsx,ts,tsx,json,css,md}": [
      "prettier --write .",
      "eslint --fix .",
      "git add"
    ]
  },
  "dependencies": {
    "@mantine/core": "^4.1.3",
    "@mantine/dates": "^4.1.3",
    "@mantine/dropzone": "^4.1.3",
    "@mantine/form": "^4.1.3",
    "@mantine/hooks": "^4.1.3",
    "@mantine/modals": "^4.1.3",
    "@mantine/next": "^4.1.3",
    "@mantine/notifications": "^4.1.3",
    "@mantine/rte": "^4.1.3",
    "cookies-next": "^2.0.4",
    "date-fns": "^2.28.0",
    "dayjs": "^1.11.0",
    "next": "12.1.4",
    "next-pwa": "^5.4.7",
    "react": "17.0.2",
    "react-dom": "17.0.2",
    "react-intl": "^5.24.8",
    "tabler-icons-react": "^1.44.0"
  },
  "devDependencies": {
    "@formatjs/cli": "^4.8.3",
    "@types/node": "17.0.23",
    "@types/react": "18.0.0",
    "@types/react-dom": "18.0.0",
    "babel-plugin-formatjs": "^10.3.19",
    "concurrently": "^7.1.0",
    "eslint": "8.13.0",
    "eslint-config-next": "12.1.4",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-security": "^1.4.0",
    "eslint-plugin-sonarjs": "^0.13.0",
    "fork-ts-checker-webpack-plugin": "^7.2.3",
    "husky": "^7.0.4",
    "lint-staged": "^12.3.7",
    "prettier": "^2.6.2",
    "prettier-plugin-organize-imports": "^2.3.4",
    "typescript": "<=4.6.0"
  }
}
